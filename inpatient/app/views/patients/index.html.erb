<h1>Listing patients</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Gender</th>
    <th>Ward</th>
    <th>Admission number</th>
  </tr>

<% for patient in @patients %>
  <tr>
    <td><%=h patient.first_name %></td>
    <td><%=h patient.last_name %></td>
    <td><%=h patient.gender %></td>
    <td><%=h patient.ward %></td>
    <td><%=h patient.admission_number %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<h2><%= link_to "View PDF Format", patients_path+'.pdf'%> </h2>

<h2><%= link_to 'New patient', new_patient_path %> </h2>
